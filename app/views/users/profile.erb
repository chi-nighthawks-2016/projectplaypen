<h2><%= user.username %>'s Profile</h2>

<div id='calendar'></div>

<a href="/users/<%= user.id %>/children"><button class="button">View Children</button></a>

<h4>Future Playdates (next five)</h4>
<div id="future-rsvps">
  <% user.future_playdates.each do |playdate| %>
  <div class="playdate-listing">
    <p class="playdate-title"><a href="/playdates/<%= playdate.id %>" class="playdate-title"><%= playdate.title %></a> | <%= playdate.date %> |  <%= playdate.location %></p>
    <div class="playdate-details">
      <%= erb :'playdates/_playdate_details', locals: {playdate: playdate}%>
    </div>
  </div>
  <% end %>
</div>

<h4>Past Playdates (most recent five)</h4>
<div id="past-rsvps">
  <% user.past_playdates.each do |playdate| %>
  <div class="playdate-listing">
    <p class="playdate-title"><a href="/playdates/<%= playdate.id %>" class="playdate-title"><%= playdate.title %></a> | <%= playdate.date %> |  <%= playdate.location %></p>
    <div class="playdate-details">
      <%= erb :'playdates/_playdate_details', locals: {playdate: playdate}%>
    </div>
  </div>
  <% end %>
</div>
